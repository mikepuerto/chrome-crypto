{
  "manifest_version": 2,

  "name": "Chrome Crypto",
  "description": "Take control of cryptocurrency exchanges.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "settings.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "https://gdax.com/*",
    "https://binance.com/*",
    "https://bittrex.com/*"
  ],

  "background": {
    "scripts": [ "utils.js", "background.js" ],
    "persistent": true
  },

  "content_scripts": [{

    "run_at": "document_start",

    "matches": [
      "https://*.bittrex.com/Market/Index?MarketName=BTC-*",
      "https://*.bittrex.com/Market/Index?MarketName=ETH-*",
      "https://*.bittrex.com/Market/Index?MarketName=USDT-*",
      "https://*.bittrex.com/"
    ],

    "js": [
      "crypto.js",
      "chart.js",
      "tradingview.js"
    ]

  }]

}
